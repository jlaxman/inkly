# Production Environment Variables
# Copy this to .env.prod and fill in your values
# DO NOT commit .env.prod to git!

# Database
POSTGRES_USER=inkly_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=inkly_prod
DATABASE_URL=postgresql://inkly_user:your_secure_password_here@postgres:5432/inkly_prod?schema=public

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS and API calls)
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# AWS S3 (Optional - for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=inkly-media
